<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingTop="5dp">

    <yunstudio2015.android.yunmeet.customviewz.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:id="@+id/iv_friend_face"
        android:background="@android:color/transparent"
        android:src="@drawable/setface"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/tv_friend_name"
            android:layout_gravity="center_vertical"
            android:text="Megan Fox"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_friend_introduction"
            android:textSize="10sp"
            android:ellipsize="end"
            android:text="Lorem Ipsum is simply dummy text of the printing and type setting"/>

    </LinearLayout>

</LinearLayout>