<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yunstudio2015.android.yunmeet.activityz.HallActivity"
    tools:showIn="@layout/activity_hall"
    >
    <yunstudio2015.android.yunmeet.customviewz.NoPaggingViewPager
        android:id="@+id/hallmain_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
    <!-- add a radio button inside -->
    <RadioGroup
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="@dimen/bottom_navigation_bar"
        android:id="@+id/radiogroup_bottom_menu"
        android:layout_width="match_parent"
        >
        <RadioButton
            android:layout_weight="0.5"
            android:id="@+id/radiobutton_bottom_menu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/radiobutton_bottom_menu_1"
            android:gravity="center"
            android:background="@null"
            android:textSize="@dimen/bottom_menu_textsize"
            android:drawableTop="@drawable/ic_bottom_1_bg"/>
        <RadioButton
            android:layout_weight="0.5"
            android:id="@+id/radiobutton_bottom_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/bottom_menu_textsize"
            android:text="@string/radiobutton_bottom_menu_2"
            android:drawableTop="@drawable/ic_bottom_2_bg"/>

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/floatting_button_space"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!-- <ImageView
             android:layout_weight="1"
             android:id="@+id/iv_bottom_launcher"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@null"
             android:src="@drawable/ic_bottom_launch"/>-->

        <!--   <android.support.design.widget.FloatingActionButton
               android:id="@+id/fab1"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:clickable="true"
               app:backgroundTint="@color/btn_background"
               android:src="@drawable/ic_bottom_launch"
               app:layout_anchorGravity="bottom|right|end"/>-->
        <!--   app:layout_anchor="@id/viewA"-->


        <RadioButton
            android:gravity="center"
            android:layout_weight="0.5"
            android:id="@+id/radiobutton_bottom_menu_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:textSize="@dimen/bottom_menu_textsize"
            android:text="@string/radiobutton_bottom_menu_3"
            android:drawableTop="@drawable/ic_bottom_3_bg"/>
        <RadioButton
            android:layout_weight="0.5"
            android:id="@+id/radiobutton_bottom_menu_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/bottom_menu_textsize"
            android:text="@string/radiobutton_bottom_menu_4"
            android:drawableTop="@drawable/ic_bottom_4_bg"/>
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_popup_menu"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:visibility="visible"
            android:layout_width="@dimen/flt_launch_button"
            android:layout_height="@dimen/flt_launch_button"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:backgroundTint="@color/btn_background"
            android:src="@drawable/ic_action_add"
            />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_picture_shower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</FrameLayout>