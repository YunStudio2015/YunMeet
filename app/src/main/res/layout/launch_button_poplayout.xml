<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@drawable/border"
    android:padding="10dp"
    android:layout_centerHorizontal="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/leftbutton"
            android:clickable="true"
            android:background="@drawable/white_circle"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/diez"
                android:background="@color/transparent"
                android:layout_width="@dimen/popup_ic_size"
                android:layout_height="@dimen/popup_ic_size" />

        </FrameLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/btn_background"
            android:text="@string/leftbutton_title"
            android:layout_below="@id/leftbutton"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/rightbutton"
            android:clickable="true"
            android:background="@drawable/white_circle"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                android:background="@color/transparent"
                android:layout_width="@dimen/popup_ic_size"
                android:layout_height="@dimen/popup_ic_size" />

        </FrameLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/btn_background"
            android:text="@string/rightbutton_title"
            android:layout_below="@id/rightbutton"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>